{
  "name": "acrobattlers",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run vite",
    "build": "bun run vite build --config client/vite.config.ts",
    "test": "bun run vitest",
    "test:watch": "bun run vitest --watch",
    "test:coverage": "bun run vitest --coverage",
    "server": "bun run server/src/index.ts",
    "client": "bun run vite --config client/vite.config.ts",
    "tsc": "tsc",
    "lint": "eslint . --ext .ts,.js,.tsx,.jsx",
    "lint:fix": "eslint . --ext .ts,.js,.tsx,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "bun run lint && bun run format:check && bun run test"
  },
  "dependencies": {
    "@colyseus/schema": "^3.0.39",
    "colyseus": "^0.14.0",
    "phaser": "^3.55.2",
    "vite-plugin-html": "^3.2.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.28.0",
    "@types/node": "^22.15.29",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "typescript": "^5.0.0",
    "vite": "^4.0.0",
    "vitest": "^0.30.0"
  }
}
