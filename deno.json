{  "tasks": {
    "dev": "deno run -A dev.ts",
    "build": "deno run -A build.ts",
    "test": "deno run -A node_modules/vitest/vitest.mjs --run",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "setup-hooks": "git config core.hooksPath .githooks && chmod +x .githooks/pre-commit"
  },
  "lint": {
    "include": ["src/", "tests/"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "include": ["src/", "tests/", "*.ts", "*.js"]
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window", "dom"],
    "strict": true
  }
}
