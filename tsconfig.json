{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["client/src/*"],
      "@shared/*": ["shared/src/*"]
    },
    "moduleResolution": "node"
  },
  "include": [
    "client/src/**/*",
    "server/src/**/*", 
    "shared/src/**/*",
    "tests/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}